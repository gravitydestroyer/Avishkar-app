<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view2"
    android:layout_width="match_parent"
    android:layout_height="@dimen/workshop_card_height"
    android:minHeight="@dimen/workshop_card_height"
    android:layout_margin="8dp"
    card_view:cardElevation="5dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardMaxElevation="5dp"
    card_view:cardPreventCornerOverlap="false"
    >

    <LinearLayout
        android:id="@+id/layoutview2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/workshop_card_height"
        android:orientation="vertical"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="20dp"
        >
        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:layout_height="@dimen/workshop_image_height"
            card_view:srcCompat="@drawable/customborder" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:id="@+id/ViewA"
            android:layout_marginLeft="5dp">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:backgroundTint="#ffffff"
                card_view:srcCompat="@drawable/phone" />

            <TextView
                android:id="@+id/callname"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="0dp"
                android:gravity="left|center"
                android:layout_centerVertical="true"
                android:textColor="#000000"
                android:text="Sumedha Rani"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/Workshop_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ViewA"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentBottom="true"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />



    </LinearLayout>

</android.support.v7.widget.CardView>